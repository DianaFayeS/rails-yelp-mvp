<div class="container">
	<div class="d-flex justify-content-between align-items-center py-6">
		<h1>Restaurants</h1>
		 <% link_to "Add restaurant", new_restaurant_path, class: 'btn btn-primary' %>
	</div>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-4">
    	<div class="card">
    		<div class="card-body">
    			<h1> <%= restaurant.name%></h1>
    			 <p> <%= restaurant.address %></p>
    			 <%= link_to "details", restaurant_path(restaurant) %>
    		</div>
    	</div>
    </div>
	  <% end %>
	</div>
</div>