<div class="container">
	<h1>New Restaurant</h1>

	<%= simple_form_for(@restaurant) do |f| %>
	<%= f.input :name %>
	<%= f.input :address %>
	<%= f.input :phone_number %>
	<%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
	<%= f.submit 'Save Restaurant', class: "betn btn-primary" %>
 <% end %>
</div>